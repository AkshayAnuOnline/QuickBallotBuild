{
  "name": "quickballot",
  "version": "1.0.56-test",
  "description": "Offline Election Management System",
  "main": "dist-electron/main.js",
  "homepage": "./",
  "build": {
    "appId": "com.quickballot.app",
    "productName": "QuickBallot",
    "directories": {
      "output": "release"
    },
    "files": [
      "dist/**/*",
      "dist-electron/**/*",
      "node_modules/**/*"
    ],
    "asarUnpack": [
      "node_modules/sharp/**/*"
    ],
    "mac": {
      "target": [
        {
          "target": "dmg",
          "arch": [
            "x64",
            "arm64"
          ]
        }
      ],
      "icon": "assets/icon.icns"
    },
    "win": {
      "target": [
        {
          "target": "nsis",
          "arch": [
            "ia32",
            "x64"
          ]
        },
        {
          "target": "nsis",
          "arch": [
            "arm64"
          ]
        }
      ],
      "icon": "assets/icon.ico"
    },
    "linux": {
      "target": [
        {
          "target": "AppImage",
          "arch": [
            "x64",
            "arm64",
            "armv7l"
          ]
        },
        {
          "target": "deb",
          "arch": [
            "x64",
            "arm64",
            "armv7l"
          ]
        }
      ],
      "icon": "assets/icon.png"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true
    },
    "publish": [
      {
        "provider": "github",
        "owner": "AkshayAnuOnline",
        "repo": "QuickBallotBuild"
      }
    ]
  },
  "scripts": {
    "dev": "vite",
    "build": "cross-env GENERATE_SOURCEMAP=false tsc && cross-env GENERATE_SOURCEMAP=false vite build",
    "preview": "vite preview",
    "electron:dev": "vite --mode development",
    "electron:build": "npm run build && electron-builder",
    "electron:publish": "npm run build && electron-builder --publish always",
    "electron:preview": "npm run build && electron .",
    "clean:release": "rimraf 'release/*' '!release/*.dmg' '!release/*.exe' '!release/*.AppImage' && rimraf release/mac-*"
  },
  "keywords": [
    "election",
    "voting",
    "offline",
    "electron"
  ],
  "author": "QuickBallot Team <info@quickballot.com>",
  "license": "MIT",
  "devDependencies": {
    "@types/better-sqlite3": "^7.6.13",
    "@types/node": "^24.0.13",
    "@types/qrcode": "^1.5.5",
    "@types/react": "^19.1.8",
    "@types/react-dom": "^19.1.6",
    "@vitejs/plugin-react": "^4.6.0",
    "cross-env": "^10.0.0",
    "electron": "^27.3.11",
    "electron-builder": "^26.0.12",
    "electron-devtools-installer": "^4.0.0",
    "rimraf": "^6.0.1",
    "rollup-plugin-copy": "^3.5.0",
    "typescript": "^5.8.3",
    "vite": "^5.4.19",
    "vite-plugin-electron": "^0.29.0"
  },
  "dependencies": {
    "@zxing/browser": "^0.1.5",
    "@zxing/library": "^0.21.3",
    "bcryptjs": "^3.0.2",
    "better-sqlite3": "^12.2.0",
    "bootstrap": "^5.3.7",
    "chart.js": "^4.5.0",
    "emoji-picker-element": "^1.26.3",
    "jspdf": "^3.0.1",
    "jspdf-autotable": "^5.0.2",
    "material-icons": "^1.13.14",
    "qrcode": "^1.5.4",
    "react": "^18.3.1",
    "react-bootstrap": "^2.10.10",
    "react-chartjs-2": "^5.3.0",
    "react-dom": "^18.3.1",
    "react-icons": "^5.5.0",
    "react-router-dom": "^7.7.0",
    "sass": "^1.89.2",
    "sharp": "^0.34.3",
    "svg2img": "^1.0.0-beta.2",
    "svg2pdf.js": "^2.5.0",
    "xlsx": "^0.18.5"
  }
}
