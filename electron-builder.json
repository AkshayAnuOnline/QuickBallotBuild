{
  "appId": "com.quickballot.app",
  "productName": "QuickBallot",
  "directories": {
    "output": "release"
  },
  "files": [
    "dist/**/*",
    "dist-electron/**/*",
    "node_modules/**/*"
  ],
  "mac": {
    "category": "public.app-category.utilities",
    "target": "dmg"
  },
  "win": {
    "target": "nsis"
  },
  "linux": {
    "target": "AppImage"
  },
  "nsis": {
    "oneClick": false,
    "allowToChangeInstallationDirectory": true
  }
} 